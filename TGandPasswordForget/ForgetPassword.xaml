<Window x:Class="Diplom.Reg_Avto.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diplom.Reg_Avto"
        mc:Ignorable="d"
        Title="Window2" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="Nickname_password" HorizontalAlignment="Left" Height="56" Margin="280,60,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="156"/>
        <TextBox x:Name="Code_name" HorizontalAlignment="Left" Height="57" Margin="280,138,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="156"/>
        <TextBox x:Name="ChatId" HorizontalAlignment="Left" Height="57" Margin="280,223,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="156"/>
        <Button x:Name="SendCode" Click="SendCode_Click" Content="Войти" HorizontalAlignment="Left" Height="47" Margin="273,307,0,0" VerticalAlignment="Top" Width="170" />

        <TextBox x:Name="Code" HorizontalAlignment="Left" Height="57" Margin="503,60,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="156"/>
        <PasswordBox x:Name="NewPassword" HorizontalAlignment="Left" Height="47" Margin="503,148,0,0" VerticalAlignment="Top" Width="180"/>
        <Button x:Name="ResetPassword" Click="ResetPasswordButton_Click" Content="Войти" HorizontalAlignment="Left" Height="47" Margin="496,228,0,0" VerticalAlignment="Top" Width="170" />
        
    </Grid>
</Window>
