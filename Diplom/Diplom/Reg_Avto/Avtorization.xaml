<Window x:Class="Diplom.Avtorization"
        Loaded="Window_Loaded"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diplom.Reg_Avto"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <!-- Пароль -->
        <PasswordBox x:Name="Password" Visibility="Visible" Margin="302,164,328,217"/>
        <TextBox x:Name="VisiblePassword" Visibility="Collapsed" Margin="302,158,312,223"/>

        <Button x:Name="ToggleButton" Content="Показать пароль" Click="TogglePasswordVisibility_Click" Margin="527,170,150,223"/>

        <!-- Никнейм с входом -->
        <TextBox x:Name="Nickname" HorizontalAlignment="Left" Margin="302,82,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="170" Height="57" TextChanged="Nickname_TextChanged"/>
        <Button x:Name="Login" Click="LoginButton_Click" Content="Войти" HorizontalAlignment="Left" Height="47" Margin="302,282,0,0" VerticalAlignment="Top" Width="170"/>

        <!--Регистрация -->
        <Button Content="Регистрация" HorizontalAlignment="Left" Height="25" Margin="302,354,0,0" VerticalAlignment="Top" Width="170" Click="Button_Click"/>

        <!--Забыл пароль -->
    </Grid>
</Window>
