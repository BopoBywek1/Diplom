<Window x:Class="Diplom.Reg_Avto.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diplom.Reg_Avto"
        mc:Ignorable="d"
        Title="Window2" Height="450" Width="800" Background="#CBE7E9">
   
      <Grid>
            <Border Background="White" CornerRadius="6" Padding="20" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel HorizontalAlignment="Center" Width="250" >
                    <!-- Header -->
                    <Border Background="#D26072" CornerRadius="6,6,0,0" Padding="10">
                        <TextBlock Text="Авторизация" Foreground="White" FontSize="16" HorizontalAlignment="Center"/>
                    </Border>

                    <StackPanel Margin="0,15,0,0" >
                        <!-- Username -->
                        <TextBox Margin="0,5,0,5" Height="30" VerticalContentAlignment="Center" />

                        <!-- Password with Eye Icon -->
                        <Grid Height="30" Margin="0,5,0,5">
                            <PasswordBox x:Name="PasswordBox" VerticalContentAlignment="Center" Padding="10,0,30,0"/>
                            <Button Content="👁" Width="25" Height="25" HorizontalAlignment="Right" VerticalAlignment="Center"
                                Background="Transparent" BorderThickness="0" Margin="0,0,2,0"/>
                        </Grid>

                        <!-- Register Link -->
                        <TextBlock Text="Зарегистрироваться"
                               Foreground="Blue"
                               FontSize="12"
                               HorizontalAlignment="Center"
                               Margin="0,5"
                               Cursor="Hand"
                               TextDecorations="Underline"/>
                    </StackPanel>

                    <!-- Login Button -->
                <Button Content="Войти"
                        Background="#D26072"
                        Foreground="White"
                        FontSize="14"
                        Margin="0,15,0,0"
                        Padding="5"
                        BorderThickness="0"
                        Height="35"
                        BorderBrush="Transparent"
                        HorizontalAlignment="Stretch"
                        ></Button>
                </StackPanel>
            </Border>
        </Grid>
    </Window>
