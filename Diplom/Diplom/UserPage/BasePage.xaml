<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diplom.AfterRegAvto"
        xmlns:BaseData="clr-namespace:Diplom.BaseData" x:Class="Diplom.AfterRegAvto.Window1"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Height="40" Margin="66,10,0,0" TextWrapping="Wrap" Text="{Binding Nickname}" VerticalAlignment="Top" Width="114"/>
        <Ellipse HorizontalAlignment="Left" Height="42" Margin="10,10,0,0" Stroke="Black" VerticalAlignment="Top" Width="45"/>
        
        <Rectangle HorizontalAlignment="Left" Height="105" Margin="256,10,0,0" Stroke="Black" VerticalAlignment="Top" Width="144"/>
        <Rectangle HorizontalAlignment="Left" Height="434" Stroke="Black" VerticalAlignment="Center" Width="215"/>
        <Rectangle HorizontalAlignment="Left" Height="77" Stroke="Black" VerticalAlignment="Top" Width="215"/>
        
        <Button Content="Выход" HorizontalAlignment="Left" Margin="32,365,0,0" VerticalAlignment="Top" Width="148" Height="49" Click="Button_Click"/>
        
        <TextBox HorizontalAlignment="Left" Margin="66,110,0,0" TextWrapping="Wrap" Text="Мое устройство" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Margin="66,173,0,0" TextWrapping="Wrap" Text="История уведомлений" VerticalAlignment="Top" Width="120"/>
        <Ellipse HorizontalAlignment="Left" Height="33" Margin="20,102,0,0" Stroke="Black" VerticalAlignment="Top" Width="35"/>
        <Ellipse HorizontalAlignment="Left" Height="33" Margin="20,173,0,0" Stroke="Black" VerticalAlignment="Top" Width="35"/>

        <ListBox ItemsSource="{Binding Devices}" Margin="440,13,97,371">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding FullName}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <DataGrid ItemsSource="{Binding Licenses}" AutoGenerateColumns="False" Margin="256,146,61,44" FontSize="16">
            <DataGrid.Columns>
                <DataGridTextColumn Width="*"  Header="ПО" Binding="{Binding SoftwareName}" />
                <DataGridTextColumn Width="*" Header="Ключ" Binding="{Binding LicenseKey}" />
                <DataGridTextColumn Width="*" Header="Статус" Binding="{Binding StatusName}" />
                
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
