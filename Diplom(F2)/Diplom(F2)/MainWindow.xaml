<Window x:Class="Diplom_F2_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diplom_F2_"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#CBE7E9" WindowStartupLocation="CenterScreen">
    <Grid>
        <Viewbox Stretch="Uniform" Margin="0,60,0,60" >
            <Border Background="White" CornerRadius="6" Padding="20">
                <StackPanel HorizontalAlignment="Center" MinWidth="250" MaxWidth="400">
                    <!-- Header -->
                    <Border Background="#D26072" CornerRadius="6,6,0,0" Padding="10">
                        <TextBlock Text="Авторизация" Foreground="White" FontSize="16" HorizontalAlignment="Center"/>
                    </Border>

                    <StackPanel Margin="0,15,0,0">
                        <Label>Никнейм</Label>
                        <TextBox x:Name="UsernameBox" Margin="0,5,0,5" Height="30" VerticalContentAlignment="Center" TextChanged="UsernameBox_TextChanged" />

                        <Label>Пароль</Label>
                        <Grid Height="30" Margin="0,5,0,5">
                            <PasswordBox x:Name="PasswordBox" VerticalContentAlignment="Center" Padding="0,0,30,0" Visibility="Visible"/>
                            <TextBox x:Name="PasswordBox2" VerticalContentAlignment="Center" Padding="0,0,30,0" Visibility="Collapsed"/>
                            <Button x:Name="EyesPassword"  Content="👁" Width="25" Height="25" HorizontalAlignment="Right" VerticalAlignment="Center"
                                Background="Transparent" BorderThickness="0" Margin="0,0,2,0" Click="PasswordButton_Click"/>
                        </Grid>
                    </StackPanel>

                    <Button Content="Войти"
                        Background="#D26072"
                        Foreground="White"
                        FontSize="14"
                        Margin="0,15,0,0"
                        Padding="5"
                        BorderThickness="0"
                        Height="35"
                        BorderBrush="Transparent"
                        HorizontalAlignment="Stretch" Click="LoginButton_Click"/>
                </StackPanel>
            </Border>
        </Viewbox>
        
    </Grid>
</Window>
