<Window x:Class="Diplom_F2_.UserPanel.OrderDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diplom_F2_.UserPanel"
        mc:Ignorable="d"
        Title="OrderDetailsWindow" Height="400" Width="700" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock x:Name="TitleText" FontSize="16" FontWeight="Bold" Margin="0 0 0 10"/>
            <TextBlock x:Name="MessageText" TextWrapping="Wrap" Margin="0 0 0 10"/>
            <TextBlock x:Name="DateText" Margin="0 0 0 10"/>
            <TextBlock x:Name="PhoneText" Margin="0 0 0 10"/>
            <TextBlock x:Name="CabinetText" Margin="0 0 0 10"/>
            <TextBlock x:Name="DepartmentText" Margin="0 0 0 10"/>
            <TextBlock x:Name="AddressText" Margin="0 0 0 10"/>
            <TextBlock x:Name="StatusText" FontStyle="Italic" Margin="0 0 0 10"/>

            <Button Content="Закрыть" HorizontalAlignment="Right" Width="80" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
